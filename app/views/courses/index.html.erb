<br />

<div class="booyah-box col-10 mx-auto">
  <h1 class="text-center learn">Learn Something Today</h1>
  <hr />

  <div class="row">
    <% @courses.each do |course| %>
        <div class ="col-sm-6 col-12">
          <h4 class="text-center">
            <%= link_to course.title, course_path(course),class: "course" %>
          </h4>
          <br />
          <%= image_tag course.image, class: 'img-fluid mx-auto d-block' %>
          <br />
            <div class="col-sm-12 mx-auto col-12">
              <%= course.description %>
            </div>
            <div class="col-sm-12 mx-auto col-12">
              <%= link_to 'More Details..', course_path(course), class: 'btn btn-light float-left' %>
            </div>
        </div>
      <br class="clr" />
    <% end %>
  </div>
</div>