<div class="booyah-box col-10 mx-auto">
  <h1 class="learn">What I'm Learning</h1>
  <div class="row">
    <% current_user.enrolled_courses.each do |course| %>
      <div class="col-sm-6 col-12">
        <h3 class="text-center">
          <br />
          <%= link_to course.title, course_path(course), class: "course" %>
        </h3>
        <br />
        <%= image_tag course.image, class: 'img-fluid mx-auto d-block' %>
        <br />
        <br />
          <div class="col-12 col-sm-12 mx-auto">
            <%= course.description %>
          </div>
          <div class="col-12 col-sm-12">
            <%= link_to "More Info..", course_path(course), class: 'btn btn-light float-left' %>
          </div>
        <br />
        <hr class="col-sm-4 col-12 mx-auto">
        <br class="clr" />
      </div>
    <% end %>
  </div>

